<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/gambar_keranjang"
            android:layout_width="120dp"
            android:layout_height="130dp"
            android:scaleType="fitXY"
            android:src="@drawable/b1" />
        <LinearLayout
            android:layout_width="match_parent"
            android:padding="10dp"
            android:orientation="vertical"
            android:layout_height="130dp">
            <TextView
                android:id="@+id/judul_keranjang"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:fontFamily="@font/poppins"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:text="Sebiji Pisang dalam Perut Jenazah"
                />
            <TextView
                android:id="@+id/harga_keranjang"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:fontFamily="@font/poppins_bold"
                android:textSize="13sp"
                android:textColor="@color/black"
                android:text="Harga : Rp.15.000"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:padding="5dp"
                android:paddingStart="0dp"
                android:paddingEnd="0dp"
                android:orientation="horizontal"
                >
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/bayar_keranjang"
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:backgroundTint="@color/button"
                    android:text="Bayar"
                    android:layout_centerVertical="true"
                    />
                <ImageButton
                    android:id="@+id/hapus_keranjang"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_trash"
                    android:layout_centerVertical="true"
                    android:background="@color/white"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>